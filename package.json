{
  "name": "pretzel",
  "productName": "Pretzel",
  "version": "1.0.0",
  "description": "a contextual shortcuts finder",
  "author": "Amie Chen",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "package": "build",
    "publish": "build -p always",
    "build:mac":
      "electron-packager . Pretzel --platform=darwin --arch=x64 --asar  --icon=icon.icns",
    "build:win":
      "electron-packager . Pretzel --platform=win32 --arch=x64 --asar  --icon=icon.ico",
    "build:linux":
      "electron-packager . Pretzel --platform=linux --arch=x64 --asar  --icon=icon.ico"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amiechen/contextual-shortcuts.git"
  },
  "keywords": ["shortcuts"],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amiechen/contextual-shortcuts/issues"
  },
  "homepage": "https://github.com/amiechen/contextual-shortcuts#readme",
  "dependencies": {
    "electron-updater": "^2.21.3",
    "js-yaml": "^3.11.0",
    "menubar": "^5.2.3",
    "objc": "^0.12.0",
    "string-similarity": "^1.2.0"
  },
  "devDependencies": {
    "electron": "^1.8.4",
    "electron-builder": "^20.6.2"
  },
  "build": {
    "appId": "com.Hyperyolo.Pretzel"
  }
}
